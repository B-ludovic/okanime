// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Modèle User - Un utilisateur peut avoir plusieurs animes
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  animes    Anime[]
}

// Modèle Anime - Chaque anime appartient à un utilisateur
model Anime {
  id              Int      @id @default(autoincrement())
  titre           String
  resume          String?  // Résumé général de l'anime
  nbSaisons       Int
  nbEpisodes      Int
  dureeEpisode    Int      // en minutes
  studio          String
  paysOrigine     String
  note            Float?   // Note sur 10, optionnelle
  avis            String?  // Avis personnel, optionnel
  imageUrl        String?  // URL de l'image
  statut          String   @default("a_voir") // "a_voir" ou "deja_vu"
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  
  // Relation avec User
  userId          Int
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}
